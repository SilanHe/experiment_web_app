Resources:
  ExperimentSubjectQueue: 
    Type: AWS::SQS::Queue
  ExperimentSubjectTopic:
    Type: AWS::SNS::Topic
    Properties:
      Subscription:
      - Endpoint:
          Fn::GetOptionSetting: {DefaultValue: nobody@example.com, OptionName: NewExperimentSubjectEmail}
        Protocol: email
      - Endpoint:
          Fn::GetAtt: [ExperimentSubjectQueue, Arn]
        Protocol: sqs
  AllowSNS2SQSPolicy:
    Type: AWS::SQS::QueuePolicy
    Properties:
      PolicyDocument:
        Id: PublicationPolicy
        Statement:
        - Action: ['sqs:SendMessage']
          Condition:
            ArnEquals:
              aws:SourceArn: {Ref: ExperimentSubjectTopic}
          Effect: Allow
          Principal: {AWS: '*'}
          Resource:
            Fn::GetAtt: [ExperimentSubjectQueue, Arn]
          Sid: Allow-SNS-SendMessage
        Version: '2008-10-17'
      Queues:
      - {Ref: ExperimentSubjectQueue}
